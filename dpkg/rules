#!/usr/bin/make -f
# debian/rules that uses debhelper >= 7.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS


%:
	dh  $@

install_libhibr:
	# Set up libhibr package directories and files
	mkdir -p debian/libhibr/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so.*.*.* debian/libhibr/usr/lib

install_libhibr_dev:
	# Set up libhibr-dev package directories and files
	mkdir -p debian/libhibr-dev/usr/include
	mkdir -p debian/libhibr-dev/usr/include/libhibr
	mkdir -p debian/libhibr-dev/usr/lib
	mkdir -p debian/libhibr-dev/usr/lib/pkgconfig
	mkdir -p debian/libhibr-dev/usr/share/man/man3
	install -p -m755 debian/tmp/usr/include/*.h debian/libhibr-dev/usr/include
	install -p -m755 debian/tmp/usr/include/libhibr/*.h debian/libhibr-dev/usr/include/libhibr
	install -p -m755 debian/tmp/usr/lib/*.la debian/libhibr-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.a debian/libhibr-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/lib*.so debian/libhibr-dev/usr/lib
	install -p -m755 debian/tmp/usr/lib/pkgconfig/* debian/libhibr-dev/usr/lib/pkgconfig
	install -p -m755 debian/tmp/usr/share/man/man3/* debian/libhibr-dev/usr/share/man/man3

install_libhibr_tools:
	# Set up libhibr-tools package directories and files
	mkdir -p debian/libhibr-tools/usr/bin
	mkdir -p debian/libhibr-tools/usr/share/man/man1
	install -p -m755 debian/tmp/usr/bin/* debian/libhibr-tools/usr/bin
	install -p -m755 debian/tmp/usr/share/man/man1/* debian/libhibr-tools/usr/share/man/man1

override_dh_auto_test:

override_dh_installinit: install_libhibr install_libhibr_dev install_libhibr_tools

override_dh_installmenu:

override_dh_installmime:

override_dh_installmodules:

override_dh_installlogcheck:

override_dh_installlogrotate:

override_dh_installpam:

override_dh_installppp:

override_dh_installudev:

override_dh_installwm:

override_dh_installxfonts:

override_dh_gconf:

override_dh_icons:

override_dh_perl:

override_dh_pysupport:

override_dh_shlibdeps:
	dh_shlibdeps -Llibhibr -l${PWD}/debian/tmp/usr/lib

override_dh_makeshlibs:
	dh_makeshlibs -Xlibhibr-dev

